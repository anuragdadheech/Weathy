<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_title_location"
        android:defaultValue="@string/pref_default_location"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/pref_temperature"
        android:title="@string/pref_title_temperature"
        android:entries="@array/pref_temperature_units"
        android:entryValues="@array/pref_temperature_units_values"
        android:defaultValue="@string/pref_temperature_celsius"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />


</PreferenceScreen>
